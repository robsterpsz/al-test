{
  "plugins": [
    "syntax-decorators",
    "transform-class-properties",
    "transform-decorators-legacy"
  ],
  "presets": [ "es2015", "stage-2", "stage-0", "react" ],
  "env": {
    "development": {
      "plugins": [ "react-hot-loader/babel" ]
    },
    "node": {
      "plugins": [ "transform-runtime" ]
    },
    "production": {
      "presets": [ "react-optimize" ]
    }
  }
}